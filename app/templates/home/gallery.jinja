{% extends "base.jinja" %}


{% block styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/home.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/gallery.css') }}">
{% endblock styles %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js" defer></script>
    <script type="application/x-javascript" src="{{url_for('static', filename='scripts/gallery.js')}}" defer></script>
{% endblock scripts %}


{% block content %}
<div class="col s8">
    <div class="form-container">
        <form action="/" class="col s14">
            <div class="row">
                <div class="input-field hoverable col s4">
                    <i class="material-icons prefix">email</i>
                    <input placeholder="Email" id="email" type="email" class="validate">
                </div>
                <div class="input-field hoverable col s4">
                    <i class="material-icons prefix">vpn_key</i>
                    <input placeholder="Hasło" id="password" type="password" class="validate">
                </div>
                <div class="input-field col s4">
                    <select>
                        <option value="">Choose your option</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                    </select>
                </div>
            </div>
            <div class="container center-align">
                <button type="submit" class="row waves-effect waves-light btn hoverable center-align valign-wrapper">Wyszukaj
                    <i class="large material-icons right">done</i>
                </button>
            </div>
        </form>
    </div>
    {% if not images %}
        <h1 class="center-align grey-text">Niestety nie znaleziono żadnych zdjęć</h1>
    {% else %}
        <div class="row">
            <div class="col s12 cards-container">
                {% for image in images %}
                    <div class="card hoverable"  style="border: solid black 1px">
                        <div class="card-image">
                            <img src="{{ image['img_src'] }}">
                            <span class="card-title">{{ image['rover']['name'] }} : {{ image['camera']['name'] }}</span>
                            <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                        </div>
                        <div class="card-content">
                            <p>Sol: {{ image['sol'] }}, Ziemska data: {{ image['earth_date'] }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
    
{% endblock content %}